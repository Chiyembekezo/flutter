    "version": "2.0.0",
    "tasks": [
        {
            "label": "core_builder run",
            "type": "shell",
            "command": "flutter packages pub run build_runner build lib",
            "problemMatcher": [
                "$dart-pub-build_runner"
            ],
            "isBackground": true
        },
        {
            "label": "gen core",
            "type": "shell",
            "command": "dart ../core_generator/lib/main.dart",
            "problemMatcher": [
                "$dart-pub-build_runner"
            ],
            "isBackground": true
        }
    ]
}